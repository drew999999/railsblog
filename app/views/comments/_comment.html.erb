<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %>: </strong>
          <%= comment.comment %>
          <!-- calling comment model & comment datatype -->
        </p>
      </div>
    </div>

    <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button is-success", data: { confirm: "You sure about that?" } %>
  </article>
</div>
